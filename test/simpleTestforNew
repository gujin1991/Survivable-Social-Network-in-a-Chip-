function getOfflineUsersByKey(key,onlineUsers,userDb){
    var q = 'SELECT userName,status FROM users WHERE userName NOT IN (\'' + onlineUsers.join('\',\'') + '\')'
        + ' and userName LIKE \'%'+key+ '%\'';
    console.log(q);


    userDb.all(q, function(err, rows) {
        console.log(rows);
    })
}

function userAdd(username, password,userDb) {
    //var dbTemp = this.db;
    userDb.run("CREATE TABLE IF NOT EXISTS users (userName TEXT PRIMARY KEY, password TEXT, joinTime TEXT , status TEXT)", function () {
        userDb.all("select * from users where userName=\"" + username + "\"", function (err, row) {
            if (row.length != 0) {
                return;
            }
            var insertUser = userDb.prepare("insert into users Values(?,?,?,?)");
            var time = new Date().toLocaleString();
            insertUser.run(username, password, time, 'test1');

            userDb.all("select * from users where userName=\"" + username + "\"", function (err, row) {
                if (err || row == null || row.length == 0) {
                    callback(305, null);
                } else {
                    //console.log(row[0].status);
                    var u ={};
                    u.userName = row[0].userName;
                    u.status = row[0].status;

                }
            });

        });
    });
};


